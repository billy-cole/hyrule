<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BCole_Calculator.App">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="Button" x:Key="NumberButton">
                <Setter Property="BackgroundColor" Value="SlateBlue"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style TargetType="Button" x:Key="OperatorButton">
                <Setter Property="BackgroundColor" Value="SeaGreen"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>